load("@rules_cc//cc:defs.bzl", "cc_binary", "cc_library")

package(features = ["layering_check"])

cc_library(
    name = "testlib",
    srcs = ["testlib.c"],
    hdrs = ["testlib.h"],
)

cc_binary(
    name = "testprog",
    srcs = ["testprog.c"],
    deps = [":testlib"],
)

cc_binary(
    name = "testprogxx",
    srcs = ["testprogxx.cc"],
)

genrule(
    name = "test-clang",
    outs = ["test-clang.txt"],
    cmd = "/usr/local/bin/clang --version > $@",
)
